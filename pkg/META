description = "Future values for asynchronous programming"
version = "%%VERSION%%"
archive(byte) = "fut.cma"
archive(byte, plugin) = "fut.cma"
archive(native) = "fut.cmxa"
archive(native, plugin) = "fut.cmxs"
exists_if = "fut.cma"

